                                <input name="name" type="text" placeholder="Your Name"
                                    class="w-full px-4 py-2 mt-2 border border border-solid border-blue-700 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600">
                    </div>
                    <div class="mt-4">
                        <label class="block">Email<label>
                                <input name="email" type="email" placeholder="Your Email"
                                    class="w-full px-4 py-2 mt-2 border border border-solid border-blue-700 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600">
                    </div>
                    <div class="mt-4">
                        <label class="block">Phone<label>
                                <input name="phone" type="text" placeholder="Your Phone"
                                    class="w-full px-4 py-2 mt-2 border border border-solid border-blue-700 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600">
                    </div>
                    <div class="mt-4">
                        <label class="block">Message<label>
                                <textarea name="message" class="w-full px-4 py-2 mt-2 border border border-solid border-blue-700 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" cols="30" rows="6"></textarea>
                                <!-- <input name="email" type="password" placeholder="Your Email"
                                    class="w-full px-4 py-2 mt-2 border border border-solid border-blue-700 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600"> -->
                    </div>
                    <div class="flex">
                        <button type="submit" class="login-button w-full px-6 py-2 mt-4 text-white bg-blue-600 rounded-lg hover:bg-blue-900">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
