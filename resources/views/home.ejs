<section class="contact">
    <h3 class="text-blue-500 text-lg text-center mb-4 mt-12">Contact US</h3>
    <h1 class="font-bold text-2xl text-center">GET IN TOUCH WITH US</h1>
    <div class="flex items-center justify-center">
        <div class="px-8 py-6 mx-4 mt-12 mb-12 text-left bg-white rounded-3xl shadow-2xl md:w-1/2 lg:w-1/2 sm:w-1/2">
            <form action="/" method="post">
                <div class="mt-4">
                    <div class="mt-4">
