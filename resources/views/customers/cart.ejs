<section class="cart py-8">
    <% if(session.cart) { %>
    <div class="order container mx-auto xl:w-1/2">
        <div class="flex items-center border-b border-black pb-4">
            <img class="w-10" src="/img/item-cart.png" alt="Cart">
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>
        <div class="pizza-list mx-4 my-4">
            <% for(let pizza of Object.values(session.cart.items)) { %>
            <div class="flex items-center my-8">
                <img class="h-28" src="/img/pizzamenu/<%= pizza.item.image%>" alt="Choosen pizza">
                <h1 class="font-bold flex-1 ml-10"><%= pizza.item.name%></h1>
                <span class="flex-1"><%= pizza.qty%> Pcs</span>
                <span class="font-bold">â‚¹ <%= pizza.item.price * pizza.qty%></span>
            </div>
            <% } %>
        </div>
        <hr class="bg-black">
        <div class="text-right py-4">
            <div class="mb-8">
                <span class="text-lg">Total Amount:</span>
                <span class="text-2xl font-bold ml-2">â‚¹ <%= session.cart.totalPrice %></span>
            </div>
            <% if(user) { %>
                <% if(messages.error) { %>
                    <span class="text-red-500 tex-sm mr-52"><%= messages.error %></span>
                <% } %>
            <div>
                <form action="/orders" method="post" class="mt-4">
                    <input name="phone" class="border border-black p-2 w-1/2 mb-4" type="text" placeholder="Enter phone number"></inpu:text>
                    <input name="address" class="border border-black p-2 w-1/2" type="text" placeholder="Enter address"></inpu:text>
                    <div>
                        <button class="btn-primary px-6 py-2 rounded-full
                        text-white font-bold mt-6" type="submit">Order Now</button>
                    </div>
                </form>
            </div>
            <% } else { %>
            <a class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full
            text-white font-bold mt-6" href="/login">Login to continue</a>
            <% } %>
        </div>
    </div>
    <% }else { %>
    <div class="empty-cart">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Cart is Empty ðŸ˜”</h1>
            <p class="mb-12 text-lg">You haven't added a pizza yet</p>
            <img class="w-1/4 mx-auto mb-14" src="/img/empty-cart.png" alt="Empty Cart">
            <p class="mt-6 text-lg">Order your favourite pizza now ðŸ‘‡</p>
            <a class="inline-block  px-6 py-2 rounded-full btn-primary text-white font-bold mt-6 mb-5"
                href="/menu"><button>Go back</button></a>
        </div>
    </div>
    <% } %>
</section>